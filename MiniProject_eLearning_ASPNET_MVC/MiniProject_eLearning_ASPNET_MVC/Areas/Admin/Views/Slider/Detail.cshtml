@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container px-3 my-5 clearfix">
    <!-- Shopping cart table -->
    <div class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <!-- Set columns width -->
                            <th class="text-center py-3 px-4" style="min-width: 400px;">Slider  Details</th>
                            <th class="text-center py-3 px-4" style="width: 120px;">Created Date</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="p-4">
                                <div class="media align-items-center">
                                    <img style="width:100px; height:100px;" src="~/img/@Model.Image" class="d-block ui-w-40 ui-bordered mr-4" alt="">
                                    <div class="media-body">
                                        <p class="heading mt-3" style="font-weight: bold;">Heading</p>
                                        <a href="#" class="d-block text-dark ">@Model.Heading</a>
                                        <p class="heading mt-3" style="font-weight: bold;">Titel</p>
                                        <a href="#" class="d-block text-dark ">@Model.Title</a>
                                        <p class="heading mt-3" style="font-weight: bold;">Description</p>
                                        <a href="#" class="d-block text-dark ">@Model.Description</a>
                                    </div>
                                </div>
                            </td>
                            <td class="text-right font-weight-semibold align-middle p-4">@Model.CreatedDate</td>
                           
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>    


            <div class="float-right">
                <a asp-action="Index" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">Back</a>
              
            </div>

        </div>
 </div>



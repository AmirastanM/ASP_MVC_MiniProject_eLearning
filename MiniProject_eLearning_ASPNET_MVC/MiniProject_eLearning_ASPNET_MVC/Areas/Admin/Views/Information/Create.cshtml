@model InformationCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="crt" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Information</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" id="inputText" placeholder="Title...">
                <span asp-validation-for="Title" class="text-danger"></span>

                <input asp-for="Description" class="form-control mt-3" id="inputText" placeholder="Description...">

                <input asp-for="Images" class="form-control mt-3" id="inputText" placeholder="Image...">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-secondary" asp-action="Index">Close</a>
        </div>
    </form>
</div>


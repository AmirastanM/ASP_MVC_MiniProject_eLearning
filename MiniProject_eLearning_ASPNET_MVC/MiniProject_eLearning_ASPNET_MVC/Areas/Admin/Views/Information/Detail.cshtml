@model Information
@{
    ViewData["Title"] = "Detail";
}

<div class="container px-3 my-5 clearfix">
  
    <div class="card">
        <div class="card-header">
            <h2>@Model.Titel</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>                    
                            <th class="text-center py-3 px-4" style="min-width: 400px;">Information  Details</th>                
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="p-4">
                                <div class="media align-items-center">
                                    <img style="width:100px; height:100px;" src="~/img/@Model.Image" class="d-block ui-w-40 ui-bordered mr-4" alt="">
                                    <div class="media-body"> 
                                        <a href="#" class="d-block text-dark ">@Model.Titel</a>
                                        <p class="description mt-3" style="font-weight: bold;">Description</p>
                                        <a href="#" class="d-block text-dark ">@Model.Description</a>
                                    </div>
                                </div>
                            </td>                          
                           
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>    


            <div class="float-right">
                <a asp-action="Index" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">Back</a>
              
            </div>

        </div>
 </div>



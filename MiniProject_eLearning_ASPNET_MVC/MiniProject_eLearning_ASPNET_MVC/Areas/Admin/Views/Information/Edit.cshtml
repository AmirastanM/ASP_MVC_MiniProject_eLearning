@model InformationEditVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <img src="~/img/@Model.Image" style="witdh:200px;height:200px;" />
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="information">Image</label>
            <span asp-validation-for="NewImage" class="text-danger"></span>
            <input class="form-control form-bg-light mt-3" type="file" asp-for="NewImage" maxlength="100" placeholder="information...">
            <span asp-validation-for="Title" class="text-danger"></span>
            <input asp-for="Title" class="form-control form-bg-light mt-3" maxlength="100" placeholder="Titel...">
            <span asp-validation-for="Description" class="text-danger"></span>
            <input asp-for="Description" class="form-control form-bg-light mt-3" maxlength="100" placeholder="Description...">
        </div>
        <button type="submit" class="btn btn-primary mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-light mr-2 mt-3">Cancel</a>
    </form>
</div>





@model MiniProject_eLearning_ASPNET_MVC.Models.SocialMedia

<h2>Create New Social Media</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SocialName">Social Media Name:</label>
        <input asp-for="SocialName" class="form-control" />
        <span asp-validation-for="SocialName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">Social Media Link:</label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
